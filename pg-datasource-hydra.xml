<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.osgi.org/xmlns/blueprint/v1.0.0
        http://www.osgi.org/xmlns/blueprint/v1.0.0
        http://camel.apache.org/schema/blueprint
        http://camel.apache.org/schema/blueprint/camel-blueprint.xsd
    ">

    <bean id="standardDs1" class="org.enhydra.jdbc.standard.StandardXADataSource">
        <property name="transactionManager" ref="jtaTM" />
        <property name="driverName" value="org.postgresql.Driver" />
        <property name="url" value="jdbc:postgresql://127.0.0.1:5432/2nd" />
    </bean>

    <bean id="enhydraDataSource1" class="org.enhydra.jdbc.pool.StandardXAPoolDataSource">
        <property name="dataSource" ref="standardDs1" />
        <property name="user" value="smx" />
        <property name="password" value="smx" />
    </bean>

    <bean id="standardDs2" class="org.enhydra.jdbc.standard.StandardXADataSource">
        <property name="transactionManager" ref="jtaTM" />
        <property name="driverName" value="org.postgresql.Driver" />
        <property name="url" value="jdbc:postgresql://127.0.0.1:5432/test" />
    </bean>

    <bean id="enhydraDataSource2" class="org.enhydra.jdbc.pool.StandardXAPoolDataSource">
        <property name="dataSource" ref="standardDs2" />
        <property name="user" value="smx" />
        <property name="password" value="smx" />
    </bean>


</blueprint>